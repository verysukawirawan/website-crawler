# Crawler Configuration
WEBSITE_URL=https://www.thepalawansentosa.com/
MAX_DEPTH=3
CONCURRENCY=5

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tracer:

# Timeout settings (in milliseconds)
REQUEST_TIMEOUT=10000

# User Agent
USER_AGENT=Mozilla/5.0 (compatible; TraceBot/1.0; +https://example.com)

# Crawler behavior
CLEANUP_REDIS=true
SKIP_DATA_IMAGES=true

# URL exclusion patterns (comma-separated paths to exclude from crawling)
# Example: EXCLUDE_PATTERNS=/blog,/admin,/private
EXCLUDE_PATTERNS=''

# Web Server Configuration
PORT=7000
